<body>
    {{ content | safe }}

    <!-- Video Modal -->
    <div class="video-modal" id="video-modal">
        <div class="video-modal-content">
            <button class="video-modal-close" id="modal-close"></button>
            <iframe id="modal-video" src="" allow="autoplay; fullscreen" allowfullscreen></iframe>
        </div>
    </div>

    <script>
        // ===================
        // LANGUAGE SYSTEM
        // ===================
        let currentLang = localStorage.getItem('lang') || 'en';

        function setLanguage(lang) {
            currentLang = lang;
            localStorage.setItem('lang', lang);
            document.documentElement.lang = lang;
            
            // Toggle visibility of language-specific elements
            document.querySelectorAll('[data-lang-en]').forEach(el => {
                el.style.display = lang === 'en' ? '' : 'none';
            });
            document.querySelectorAll('[data-lang-fr]').forEach(el => {
                el.style.display = lang === 'fr' ? '' : 'none';
            });
            
            // Update static translations
            document.querySelectorAll('[data-i18n]').forEach(el => {
                const key = el.dataset.i18n;
                if (staticTranslations[lang] && staticTranslations[lang][key]) {
                    el.innerHTML = staticTranslations[lang][key];
                }
            });
            
            // Update active state on all toggle buttons
            document.querySelectorAll('.lang-toggle button').forEach(btn => {
                btn.classList.toggle('active', btn.dataset.lang === lang);
            });
        }

        // Static translations for UI elements
        const staticTranslations = {
            en: {
                work: 'Work',
                about: 'About',
                contact: 'Contact',
                selectedWork: 'Selected Work',
                dragToExplore: 'Drag to explore',
                featuredIn: 'Featured In & Collaborations',
                copyright: '© 2026 Konan David. All rights reserved.',
                location: 'Paris, France',
                filterAll: 'All',
                filterLive: 'Live Show',
                filterFilm: 'Film & MV',
                filterCommercial: 'Commercial'
            },
            fr: {
                work: 'Projets',
                about: 'À propos',
                contact: 'Contact',
                selectedWork: 'Projets Sélectionnés',
                dragToExplore: 'Glissez pour explorer',
                featuredIn: 'Collaborations & Parutions',
                copyright: '© 2026 Konan David. Tous droits réservés.',
                location: 'Paris, France',
                filterAll: 'Tous',
                filterLive: 'Live Show',
                filterFilm: 'Film & MV',
                filterCommercial: 'Commercial'
            }
        };

        // Initialize language
        document.addEventListener('DOMContentLoaded', () => {
            setLanguage(currentLang);
            
            // Bind click handlers to all language buttons
            document.querySelectorAll('.lang-toggle button').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.preventDefault();
                    setLanguage(btn.dataset.lang);
                });
            });
        });

        // ===================
        // MOBILE MENU
        // ===================
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const mobileMenu = document.querySelector('.mobile-menu');
        
        mobileMenuBtn?.addEventListener('click', () => {
            mobileMenuBtn.classList.toggle('active');
            mobileMenu.classList.toggle('active');
            document.body.style.overflow = mobileMenu.classList.contains('active') ? 'hidden' : '';
        });

        document.querySelectorAll('.mobile-menu a').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenuBtn.classList.remove('active');
                mobileMenu.classList.remove('active');
                document.body.style.overflow = '';
            });
        });

        // ===================
        // VIDEO MODAL
        // ===================
        const videoModal = document.getElementById('video-modal');
        const modalVideo = document.getElementById('modal-video');
        
        document.querySelectorAll('.project-play').forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.stopPropagation();
                const url = btn.closest('.project-card')?.dataset.video;
                if (url) {
                    let embed = url;
                    if (url.includes('youtube.com/watch')) embed = `https://www.youtube.com/embed/${url.split('v=')[1]?.split('&')[0]}?autoplay=1`;
                    else if (url.includes('youtu.be/')) embed = `https://www.youtube.com/embed/${url.split('youtu.be/')[1]}?autoplay=1`;
                    else if (url.includes('vimeo.com/')) embed = `https://player.vimeo.com/video/${url.split('vimeo.com/')[1]}?autoplay=1`;
                    modalVideo.src = embed;
                    videoModal.classList.add('active');
                    document.body.style.overflow = 'hidden';
                }
            });
        });

        document.getElementById('modal-close')?.addEventListener('click', () => {
            videoModal.classList.remove('active');
            modalVideo.src = '';
            document.body.style.overflow = '';
        });

        videoModal?.addEventListener('click', (e) => {
            if (e.target === videoModal) {
                videoModal.classList.remove('active');
                modalVideo.src = '';
                document.body.style.overflow = '';
            }
        });

        // ===================
        // HERO SCROLL EFFECTS
        // ===================
        const heroShowreel = document.getElementById('hero-showreel');
        const heroText = document.getElementById('hero-text');
        const scrollIndicator = document.querySelector('.scroll-indicator');

        function handleScroll() {
            const y = window.scrollY;
            
            const showreelOpacity = Math.max(0, 1 - (y / 400));
            const titleOpacity = Math.max(0, Math.min(1, 1 - ((y - 200) / 300)));
            const indicatorOpacity = Math.max(0, Math.min(1, 1 - ((y - 350) / 200)));
            
            if (heroShowreel) {
                heroShowreel.style.opacity = showreelOpacity;
                heroShowreel.style.transform = `scale(${1 + (1 - showreelOpacity) * 0.1})`;
            }
            if (heroText) heroText.style.opacity = titleOpacity;
            if (scrollIndicator) scrollIndicator.style.opacity = indicatorOpacity;
            
            document.querySelector('nav')?.classList.toggle('scrolled', y > 100);
        }

        window.addEventListener('scroll', handleScroll, { passive: true });
        handleScroll();

        // ===================
        // SECTION REVEAL
        // ===================
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(e => e.isIntersecting && e.target.classList.add('visible'));
        }, { threshold: 0.1 });

        document.querySelectorAll('.section-header').forEach(el => observer.observe(el));

        // ===================
        // PROJECT SCROLL ARROWS
        // ===================
        const container = document.querySelector('.projects-container');
        const leftArrow = document.getElementById('scroll-left');
        const rightArrow = document.getElementById('scroll-right');

        leftArrow?.addEventListener('click', () => container.scrollBy({ left: -400, behavior: 'smooth' }));
        rightArrow?.addEventListener('click', () => container.scrollBy({ left: 400, behavior: 'smooth' }));

        function updateArrows() {
            if (!container) return;
            if (leftArrow) leftArrow.disabled = container.scrollLeft <= 0;
            if (rightArrow) rightArrow.disabled = container.scrollLeft >= container.scrollWidth - container.clientWidth - 10;
        }
        
        container?.addEventListener('scroll', updateArrows);
        updateArrows();

        // ===================
        // MOUSE DRAG TO SCROLL (desktop only, not touch)
        // ===================
        if (container) {
            const isTouchDevice = ('ontouchstart' in window) || (navigator.maxTouchPoints > 0);
            let isDragging = false;
            let startX = 0;
            let scrollStart = 0;
            let hasMoved = false;

            if (!isTouchDevice) {
                container.addEventListener('mousedown', function(e) {
                    if (e.target.closest('.project-play')) return;
                    isDragging = true;
                    hasMoved = false;
                    startX = e.pageX;
                    scrollStart = container.scrollLeft;
                    container.classList.add('dragging');
                    e.preventDefault();
                });

                window.addEventListener('mousemove', function(e) {
                    if (!isDragging) return;
                    const dx = e.pageX - startX;
                    if (Math.abs(dx) > 3) hasMoved = true;
                    container.scrollLeft = scrollStart - dx;
                    updateArrows();
                });

                window.addEventListener('mouseup', function() {
                    if (!isDragging) return;
                    isDragging = false;
                    container.classList.remove('dragging');
                });

                container.addEventListener('click', function(e) {
                    if (hasMoved) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                }, true);
            }
        }

        // ===================
        // DRAG/SWIPE INDICATOR TEXT
        // ===================
        (function() {
            const isTouchDevice = ('ontouchstart' in window) || (navigator.maxTouchPoints > 0);
            if (isTouchDevice) {
                document.querySelectorAll('[data-i18n="dragToExplore"]').forEach(el => {
                    el.textContent = currentLang === 'fr' ? 'Swipez pour explorer' : 'Swipe to explore';
                });
                // Also update the translations so language switch works
                staticTranslations.en.dragToExplore = 'Swipe to explore';
                staticTranslations.fr.dragToExplore = 'Swipez pour explorer';
            }
        })();

        // ===================
        // PROJECT FILTERS
        // ===================
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const filter = btn.dataset.filter;
                
                // Update active state
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                // Filter cards
                const cards = document.querySelectorAll('.project-card');
                cards.forEach(card => {
                    if (filter === 'all' || card.dataset.category === filter) {
                        card.classList.remove('filtered-out');
                    } else {
                        card.classList.add('filtered-out');
                    }
                });
                
                // Reset scroll position
                if (container) {
                    container.scrollLeft = 0;
                    updateArrows();
                }
            });
        });

        // ===================
        // SMOOTH SCROLL NAV
        // ===================
        document.querySelectorAll('a[href^="#"]').forEach(a => {
            a.addEventListener('click', (e) => {
                e.preventDefault();
                document.querySelector(a.getAttribute('href'))?.scrollIntoView({ behavior: 'smooth' });
            });
        });

        // ===================
        // SHOWREEL SOUND
        // ===================
        const heroVideo = document.getElementById('hero-video');
        let soundOn = false;
        heroShowreel?.addEventListener('click', () => {
            if (!soundOn && heroVideo) {
                heroVideo.src = heroVideo.src.replace('muted=1', 'muted=0');
                soundOn = true;
            }
        });

        // ===================
        // ROTATING WORD HERO
        // ===================
        (function() {
            const track = document.querySelector('.rotating-word-track');
            const words = document.querySelectorAll('.rotating-word');
            if (!words.length || !track) return;

            const total = words.length;
            let current = 0;

            // Disable transitions to measure + set initial state
            words.forEach(w => {
                w.style.transition = 'none';
            });
            track.style.transition = 'none';

            requestAnimationFrame(() => {
                const widths = Array.from(words).map(w => w.offsetWidth);

                // Stack words below each other from the start
                words.forEach((w, i) => {
                    w.style.transform = `translateY(${i * 1.2}em)`;
                });

                // Track width = first word
                track.style.width = widths[0] + 'px';

                function rotateTo(index) {
                    // Shift all words up so current word sits at 0
                    words.forEach((w, i) => {
                        w.style.transform = `translateY(${(i - index) * 1.2}em)`;
                    });
                    track.style.width = widths[index] + 'px';
                }

                // Enable transitions after first paint
                requestAnimationFrame(() => {
                    requestAnimationFrame(() => {
                        words.forEach(w => {
                            w.style.transition = 'transform 0.6s cubic-bezier(0.76, 0, 0.24, 1)';
                        });
                        track.style.transition = 'width 0.6s cubic-bezier(0.76, 0, 0.24, 1)';
                    });
                });

                setInterval(() => {
                    current = (current + 1) % total;
                    rotateTo(current);
                }, 2200);
            });
        })();
    </script>
