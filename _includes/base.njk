<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ site.title }} â€” {{ site.description }}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-primary: #000000;
            --bg-secondary: #0a0a0a;
            --bg-tertiary: #111111;
            --text-primary: #f5f5f7;
            --text-secondary: #a1a1a6;
            --text-muted: #6e6e73;
            --accent: #FF6B35;
            --accent-glow: rgba(255, 107, 53, 0.4);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
            overflow-x: hidden;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--bg-primary);
            color: var(--text-primary);
            line-height: 1.5;
            overflow-x: hidden;
            -webkit-font-smoothing: antialiased;
            position: relative;
            width: 100%;
            max-width: 100vw;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            opacity: 0.025;
            z-index: 10000;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
        }

        /* Navigation */
        nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 9999;
            padding: 20px 48px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.4s ease;
            background: transparent;
        }

        nav.scrolled {
            background: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            padding: 16px 48px;
        }

        .logo {
            font-size: 13px;
            font-weight: 600;
            letter-spacing: 0.12em;
            text-transform: uppercase;
            text-decoration: none;
            color: var(--text-primary);
            transition: color 0.3s ease;
        }

        .logo:hover {
            color: var(--accent);
        }

        .nav-right {
            display: flex;
            align-items: center;
            gap: 36px;
        }

        .nav-links {
            display: flex;
            gap: 36px;
            list-style: none;
        }

        .nav-links a {
            text-decoration: none;
            color: var(--text-secondary);
            font-size: 13px;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-links a:hover {
            color: var(--accent);
        }

        .nav-contact {
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            color: var(--text-primary);
            font-size: 13px;
            font-weight: 500;
            padding: 10px 20px;
            border: 1px solid rgba(255, 107, 53, 0.5);
            border-radius: 100px;
            transition: all 0.3s ease;
            background: rgba(255, 107, 53, 0.1);
        }

        .nav-contact:hover {
            background: var(--accent);
            border-color: var(--accent);
            color: #fff;
        }

        .nav-contact svg {
            width: 16px;
            height: 16px;
        }

        /* Mobile Menu */
        .mobile-menu-btn {
            display: none;
            flex-direction: column;
            gap: 5px;
            background: none;
            border: none;
            padding: 8px;
            cursor: pointer;
            z-index: 10000;
        }

        .mobile-menu-btn span {
            width: 22px;
            height: 2px;
            background: var(--text-primary);
            transition: all 0.3s ease;
        }

        .mobile-menu-btn.active span:nth-child(1) { transform: rotate(45deg) translate(5px, 5px); }
        .mobile-menu-btn.active span:nth-child(2) { opacity: 0; }
        .mobile-menu-btn.active span:nth-child(3) { transform: rotate(-45deg) translate(5px, -5px); }

        .mobile-menu {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.98);
            z-index: 9998;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 32px;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.4s ease;
        }

        .mobile-menu.active {
            opacity: 1;
            pointer-events: all;
        }

        .mobile-menu a {
            font-size: 28px;
            font-weight: 600;
            color: var(--text-primary);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .mobile-menu a:hover {
            color: var(--accent);
        }

        /* Hero */
        .hero {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 100px 48px 20px;
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            width: 140%;
            height: 140%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: radial-gradient(ellipse at 50% 40%, rgba(255, 107, 53, 0.08) 0%, transparent 50%);
            pointer-events: none;
        }

        .hero-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 28px;
            width: 100%;
            max-width: 1200px;
            position: relative;
            z-index: 1;
        }

        /* Showreel */
        .hero-showreel {
            position: relative;
            border-radius: 20px;
            overflow: hidden;
            width: 100%;
            max-width: 900px;
            aspect-ratio: 16/9;
            background: #000000;
            box-shadow: 
                0 60px 120px -30px rgba(0, 0, 0, 0.7),
                0 30px 60px -20px rgba(255, 107, 53, 0.12);
        }

        .hero-showreel::before {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: 20px;
            padding: 1px;
            background: linear-gradient(135deg, rgba(255,255,255,0.12), transparent);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            pointer-events: none;
            z-index: 2;
        }

        .hero-showreel iframe {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            border: none;
        }

        /* Title */
        .hero-text h1 {
            font-size: clamp(11px, 1.4vw, 16px);
            font-weight: 500;
            letter-spacing: 0.12em;
            text-transform: uppercase;
            color: var(--text-secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
        }

        .hero-text .title-block {
            transition: all 0.4s ease;
        }

        .hero-text .title-block:hover {
            color: var(--text-primary);
            text-shadow: 0 0 30px rgba(255, 107, 53, 0.6), 0 0 60px rgba(255, 107, 53, 0.3);
        }

        .hero-text .separator {
            margin: 0 14px;
            color: var(--accent);
            font-size: 1.1em;
            font-weight: 600;
            text-shadow: 0 0 20px rgba(255, 107, 53, 0.5);
            transition: all 0.4s ease;
        }

        .hero-text .separator:hover {
            transform: scale(1.2) rotate(90deg);
        }

        /* Scroll indicator */
        .scroll-indicator {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .scroll-line {
            width: 1px;
            height: 50px;
            background: rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
        }

        .scroll-line::before {
            content: '';
            position: absolute;
            top: -20px;
            left: 0;
            width: 100%;
            height: 20px;
            background: linear-gradient(to bottom, transparent, var(--text-primary), transparent);
            animation: scrollMove 2s ease-in-out infinite;
        }

        @keyframes scrollMove {
            0% { top: -20px; opacity: 0; }
            20% { opacity: 1; }
            80% { opacity: 1; }
            100% { top: 50px; opacity: 0; }
        }

        /* Work Section */
        .work-section {
            padding: 40px 48px 60px;
            overflow: hidden;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            margin-bottom: 32px;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.6s ease;
        }

        .section-header.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .section-header h2 {
            font-size: clamp(28px, 4vw, 42px);
            font-weight: 600;
            letter-spacing: -0.03em;
        }

        .drag-indicator {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 8px;
        }

        .drag-indicator span {
            font-size: 12px;
            color: var(--text-muted);
        }

        .drag-line {
            width: 50px;
            height: 1px;
            background: rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
        }

        .drag-line::before {
            content: '';
            position: absolute;
            left: -20px;
            top: 0;
            width: 20px;
            height: 100%;
            background: linear-gradient(to right, transparent, var(--text-primary), transparent);
            animation: dragMove 2s ease-in-out infinite;
        }

        @keyframes dragMove {
            0% { left: -20px; opacity: 0; }
            20% { opacity: 1; }
            80% { opacity: 1; }
            100% { left: 50px; opacity: 0; }
        }

        /* Projects wrapper */
        .projects-wrapper {
            position: relative;
            overflow: visible;
        }

        /* Projects container */
        .projects-container {
            display: flex;
            gap: 28px;
            overflow-x: scroll;
            overflow-y: hidden;
            padding: 20px 0 30px;
            margin: 0 -48px;
            padding-left: 48px;
            padding-right: 48px;
            scrollbar-width: none;
            -ms-overflow-style: none;
            scroll-snap-type: x mandatory;
            -webkit-overflow-scrolling: touch;
            overscroll-behavior-x: contain;
        }

        .projects-container::-webkit-scrollbar {
            display: none;
        }

        /* Project Card */
        .project-card {
            width: 400px;
            min-width: 400px;
            aspect-ratio: 4/5;
            border-radius: 16px;
            overflow: hidden;
            position: relative;
            flex-shrink: 0;
            background: var(--bg-tertiary);
            scroll-snap-align: start;
            box-shadow: 
                0 4px 20px rgba(0, 0, 0, 0.5),
                0 8px 25px -5px rgba(255, 107, 53, 0.25);
            transition: box-shadow 0.4s ease, transform 0.4s ease;
        }

        .project-card:hover {
            box-shadow: 
                0 8px 30px rgba(0, 0, 0, 0.6),
                0 12px 35px -5px rgba(255, 107, 53, 0.4);
            transform: translateY(-4px);
        }

        .project-card::before {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: 16px;
            padding: 1px;
            background: rgba(255, 255, 255, 0.08);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            pointer-events: none;
            z-index: 5;
            transition: background 0.4s ease;
        }

        .project-card:hover::before {
            background: var(--accent);
        }

        .project-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.8s ease;
            pointer-events: none;
            user-select: none;
            -webkit-user-drag: none;
        }

        .project-card:hover img {
            transform: scale(1.08);
        }

        .project-info {
            position: absolute;
            inset: 0;
            padding: 28px;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.3) 50%, transparent 100%);
            color: white;
            pointer-events: none;
        }

        .project-category {
            position: absolute;
            top: 24px;
            left: 24px;
            font-size: 10px;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            padding: 6px 12px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .project-play {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.8);
            width: 70px;
            height: 70px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: all 0.4s ease;
            border: 1px solid rgba(255, 255, 255, 0.3);
            cursor: pointer;
            z-index: 10;
            pointer-events: auto;
        }

        .project-play::before {
            content: '';
            border-style: solid;
            border-width: 12px 0 12px 20px;
            border-color: transparent transparent transparent white;
            margin-left: 4px;
        }

        .project-card:hover .project-play {
            opacity: 1;
            transform: translate(-50%, -50%) scale(1);
        }

        .project-play:hover {
            background: var(--accent);
        }

        .project-artist {
            font-size: 13px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.02em;
            opacity: 0.85;
            transition: color 0.3s ease;
        }

        .project-card:hover .project-artist {
            color: var(--accent);
        }

        .project-title {
            font-size: 22px;
            font-weight: 600;
            margin-top: 4px;
        }

        .project-description {
            font-size: 13px;
            line-height: 1.6;
            opacity: 0;
            max-height: 0;
            overflow: hidden;
            transition: all 0.5s ease;
            margin-top: 12px;
            color: rgba(255, 255, 255, 0.75);
        }

        .project-card:hover .project-description {
            opacity: 1;
            max-height: 80px;
        }

        /* Scroll arrows */
        .scroll-arrows {
            display: flex;
            justify-content: center;
            gap: 16px;
            margin-top: 32px;
        }

        .scroll-arrow {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            border: 1px solid rgba(255, 255, 255, 0.15);
            background: transparent;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.15s ease;
            -webkit-tap-highlight-color: transparent;
            touch-action: manipulation;
        }

        @media (hover: hover) and (pointer: fine) {
            .scroll-arrow:hover {
                border-color: var(--accent);
                background: rgba(255, 107, 53, 0.1);
            }
        }

        .scroll-arrow:active {
            border-color: var(--accent);
            background: rgba(255, 107, 53, 0.15);
        }

        .scroll-arrow:disabled {
            opacity: 0.3;
            cursor: not-allowed;
        }

        .scroll-arrow svg {
            width: 20px;
            height: 20px;
            stroke: var(--text-primary);
            fill: none;
            stroke-width: 2;
        }

        /* Video Modal */
        .video-modal {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.95);
            z-index: 20000;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.4s ease;
        }

        .video-modal.active {
            opacity: 1;
            pointer-events: all;
        }

        .video-modal-content {
            width: 90%;
            max-width: 1100px;
            aspect-ratio: 16/9;
            position: relative;
        }

        .video-modal-content iframe {
            width: 100%;
            height: 100%;
            border: none;
            border-radius: 12px;
        }

        .video-modal-close {
            position: absolute;
            top: -50px;
            right: 0;
            width: 40px;
            height: 40px;
            background: rgba(255, 255, 255, 0.1);
            border: none;
            border-radius: 50%;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .video-modal-close:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        .video-modal-close::before,
        .video-modal-close::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 18px;
            height: 2px;
            background: white;
        }

        .video-modal-close::before { transform: translate(-50%, -50%) rotate(45deg); }
        .video-modal-close::after { transform: translate(-50%, -50%) rotate(-45deg); }

        /* Press Section */
        .press-section {
            padding: 40px 0 70px;
            overflow: hidden;
        }

        .press-section::before {
            content: '';
            display: block;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.08), transparent);
            margin-bottom: 40px;
        }

        .press-label {
            text-align: center;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 0.2em;
            color: var(--text-muted);
            margin-bottom: 40px;
        }

        .marquee-wrapper {
            position: relative;
            overflow: hidden;
        }

        .marquee-wrapper::before,
        .marquee-wrapper::after {
            content: '';
            position: absolute;
            top: 0;
            bottom: 0;
            width: 100px;
            z-index: 2;
            pointer-events: none;
        }

        .marquee-wrapper::before {
            left: 0;
            background: linear-gradient(to right, var(--bg-primary), transparent);
        }

        .marquee-wrapper::after {
            right: 0;
            background: linear-gradient(to left, var(--bg-primary), transparent);
        }

        .marquee-track {
            display: flex;
            align-items: center;
            gap: 80px;
            width: max-content;
            animation: marqueeAnim 35s linear infinite;
        }

        .marquee-track:hover {
            animation-play-state: paused;
        }

        @keyframes marqueeAnim {
            0% { transform: translateX(0); }
            100% { transform: translateX(-50%); }
        }

        .press-logo {
            height: 24px;
            opacity: 0.5;
            transition: opacity 0.3s ease;
            filter: brightness(0) invert(1);
        }

        .press-logo:hover {
            opacity: 0.9;
        }

        /* About Section */
        .about-section {
            padding: 100px 48px;
            background: var(--bg-secondary);
            position: relative;
            overflow: hidden;
        }

        .about-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.08), transparent);
        }

        .about-container {
            max-width: 1100px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 0.8fr 1.4fr;
            gap: 80px;
            align-items: center;
        }

        .about-image {
            border-radius: 16px;
            overflow: hidden;
            max-width: 320px;
            aspect-ratio: 3/4;
        }

        .about-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .about-label {
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 0.15em;
            color: var(--accent);
            margin-bottom: 16px;
            font-weight: 600;
        }

        .about-content h2 {
            font-size: clamp(24px, 2.8vw, 32px);
            font-weight: 600;
            margin-bottom: 28px;
            letter-spacing: -0.02em;
        }

        .about-content p {
            font-size: 15px;
            line-height: 1.8;
            color: var(--text-secondary);
            margin-bottom: 16px;
        }

        .about-content strong {
            color: var(--text-primary);
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .about-content strong:hover {
            color: var(--accent);
        }

        /* Contact Section */
        .contact-section {
            padding: 100px 48px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .contact-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.08), transparent);
        }

        .contact-label {
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 0.15em;
            color: var(--accent);
            margin-bottom: 16px;
            font-weight: 600;
        }

        .contact-section h2 {
            font-size: clamp(28px, 4.5vw, 48px);
            font-weight: 600;
            margin-bottom: 40px;
            letter-spacing: -0.03em;
        }

        .contact-email {
            display: inline-block;
            font-size: 15px;
            font-weight: 500;
            color: var(--text-primary);
            text-decoration: none;
            padding: 16px 40px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 100px;
            transition: all 0.4s ease;
        }

        .contact-email:hover {
            background: var(--accent);
            border-color: var(--accent);
            box-shadow: 0 0 30px rgba(255, 107, 53, 0.3);
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 40px;
            margin-top: 40px;
        }

        .social-links a {
            color: var(--text-muted);
            text-decoration: none;
            font-size: 13px;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .social-links a:hover {
            color: var(--accent);
        }

        /* Footer */
        footer {
            padding: 28px 48px;
            display: flex;
            justify-content: space-between;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            font-size: 12px;
            color: var(--text-muted);
            overflow: hidden;
        }

        /* Mobile */
        @media (max-width: 1024px) {
            .about-container { grid-template-columns: 1fr; gap: 50px; }
            .about-image { max-width: 280px; margin: 0 auto; }
            .project-card { width: 340px; min-width: 340px; }
            .nav-contact span { display: none; }
            .nav-contact { padding: 10px; }
        }

        @media (max-width: 768px) {
            nav { padding: 16px 24px; }
            nav.scrolled { padding: 14px 24px; }
            .nav-links, .nav-contact { display: none; }
            .mobile-menu-btn { display: flex; }
            .mobile-menu { display: flex; }
            .hero { padding: 80px 24px 20px; }
            .hero-text h1 { font-size: 9px; letter-spacing: 0.08em; }
            .hero-text .separator { margin: 0 8px; font-size: 1em; }
            .work-section { padding: 30px 24px 60px; }
            .projects-container { 
                margin: 0 -24px; 
                padding-left: 24px; 
                padding-right: 24px;
                gap: 16px;
            }
            .project-card { width: 280px; min-width: 280px; }
            .scroll-arrows { gap: 12px; }
            .scroll-arrow { width: 40px; height: 40px; }
            .about-section, .contact-section { padding: 80px 24px; }
            footer { 
                flex-direction: column; 
                gap: 12px; 
                text-align: center; 
                padding: 24px;
            }
        }
    </style>
</head>
<body>
    {{ content | safe }}

    <!-- Video Modal -->
    <div class="video-modal" id="video-modal">
        <div class="video-modal-content">
            <button class="video-modal-close" id="modal-close"></button>
            <iframe id="modal-video" src="" allow="autoplay; fullscreen" allowfullscreen></iframe>
        </div>
    </div>

    <script>
        // Mobile Menu
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const mobileMenu = document.querySelector('.mobile-menu');
        
        mobileMenuBtn?.addEventListener('click', () => {
            mobileMenuBtn.classList.toggle('active');
            mobileMenu.classList.toggle('active');
            document.body.style.overflow = mobileMenu.classList.contains('active') ? 'hidden' : '';
        });

        document.querySelectorAll('.mobile-menu a').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenuBtn.classList.remove('active');
                mobileMenu.classList.remove('active');
                document.body.style.overflow = '';
            });
        });

        // Video Modal
        const videoModal = document.getElementById('video-modal');
        const modalVideo = document.getElementById('modal-video');
        
        document.querySelectorAll('.project-play').forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.stopPropagation();
                const url = btn.closest('.project-card')?.dataset.video;
                if (url) {
                    let embed = url;
                    if (url.includes('youtube.com/watch')) embed = `https://www.youtube.com/embed/${url.split('v=')[1]?.split('&')[0]}?autoplay=1`;
                    else if (url.includes('youtu.be/')) embed = `https://www.youtube.com/embed/${url.split('youtu.be/')[1]}?autoplay=1`;
                    else if (url.includes('vimeo.com/')) embed = `https://player.vimeo.com/video/${url.split('vimeo.com/')[1]}?autoplay=1`;
                    modalVideo.src = embed;
                    videoModal.classList.add('active');
                    document.body.style.overflow = 'hidden';
                }
            });
        });

        document.getElementById('modal-close')?.addEventListener('click', () => {
            videoModal.classList.remove('active');
            modalVideo.src = '';
            document.body.style.overflow = '';
        });

        videoModal?.addEventListener('click', (e) => {
            if (e.target === videoModal) {
                videoModal.classList.remove('active');
                modalVideo.src = '';
                document.body.style.overflow = '';
            }
        });

        // ASYMMETRIC scroll effects
        // Scroll DOWN = slow disappear (long range)
        // Scroll UP = fast reappear (short range)
        const heroShowreel = document.getElementById('hero-showreel');
        const heroText = document.getElementById('hero-text');
        const scrollIndicator = document.querySelector('.scroll-indicator');
        
        let lastY = 0;
        let showreelOpacity = 1;
        let titleOpacity = 1;
        let indicatorOpacity = 1;

        function handleScroll() {
            const y = window.scrollY;
            const scrollingDown = y > lastY;
            
            // Different speeds for up vs down
            const speed = scrollingDown ? 0.003 : 0.015; // 5x faster when going up
            const delta = Math.abs(y - lastY) * speed;
            
            if (scrollingDown) {
                // Disappear order: showreel -> title -> indicator
                if (showreelOpacity > 0) {
                    showreelOpacity = Math.max(0, showreelOpacity - delta);
                } else if (titleOpacity > 0) {
                    titleOpacity = Math.max(0, titleOpacity - delta);
                } else if (indicatorOpacity > 0) {
                    indicatorOpacity = Math.max(0, indicatorOpacity - delta);
                }
            } else {
                // Reappear order: indicator -> title -> showreel (reverse)
                if (indicatorOpacity < 1) {
                    indicatorOpacity = Math.min(1, indicatorOpacity + delta);
                } else if (titleOpacity < 1) {
                    titleOpacity = Math.min(1, titleOpacity + delta);
                } else if (showreelOpacity < 1) {
                    showreelOpacity = Math.min(1, showreelOpacity + delta);
                }
            }
            
            // At top, reset everything to visible
            if (y <= 10) {
                showreelOpacity = 1;
                titleOpacity = 1;
                indicatorOpacity = 1;
            }
            
            // Apply opacities
            if (heroShowreel) {
                heroShowreel.style.opacity = showreelOpacity;
                heroShowreel.style.transform = `scale(${1 + (1 - showreelOpacity) * 0.1})`;
            }
            if (heroText) heroText.style.opacity = titleOpacity;
            if (scrollIndicator) scrollIndicator.style.opacity = indicatorOpacity;
            
            document.querySelector('nav')?.classList.toggle('scrolled', y > 100);
            lastY = y;
        }

        window.addEventListener('scroll', handleScroll, { passive: true });
        handleScroll();

        // Section reveal
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(e => e.isIntersecting && e.target.classList.add('visible'));
        }, { threshold: 0.1 });

        document.querySelectorAll('.section-header').forEach(el => observer.observe(el));

        // Horizontal scroll - capture wheel on the whole section
        const container = document.querySelector('.projects-container');
        const workSection = document.querySelector('.work-section');
        const leftArrow = document.getElementById('scroll-left');
        const rightArrow = document.getElementById('scroll-right');

        workSection?.addEventListener('wheel', (e) => {
            // Check if cursor is over the projects area
            const rect = container.getBoundingClientRect();
            if (e.clientY >= rect.top && e.clientY <= rect.bottom) {
                const atStart = container.scrollLeft <= 0;
                const atEnd = container.scrollLeft >= container.scrollWidth - container.clientWidth - 5;
                
                // Use deltaX if available (trackpad horizontal), otherwise convert deltaY
                let scrollAmount = e.deltaX !== 0 ? e.deltaX : e.deltaY;
                
                if ((scrollAmount > 0 && !atEnd) || (scrollAmount < 0 && !atStart)) {
                    e.preventDefault();
                    container.scrollLeft += scrollAmount;
                }
            }
        }, { passive: false });

        leftArrow?.addEventListener('click', () => container.scrollBy({ left: -400, behavior: 'smooth' }));
        rightArrow?.addEventListener('click', () => container.scrollBy({ left: 400, behavior: 'smooth' }));

        function updateArrows() {
            if (leftArrow) leftArrow.disabled = container.scrollLeft <= 0;
            if (rightArrow) rightArrow.disabled = container.scrollLeft >= container.scrollWidth - container.clientWidth - 10;
        }
        
        container?.addEventListener('scroll', updateArrows);
        updateArrows();

        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(a => {
            a.addEventListener('click', (e) => {
                e.preventDefault();
                document.querySelector(a.getAttribute('href'))?.scrollIntoView({ behavior: 'smooth' });
            });
        });

        // Showreel sound
        const heroVideo = document.getElementById('hero-video');
        let soundOn = false;
        heroShowreel?.addEventListener('click', () => {
            if (!soundOn && heroVideo) {
                heroVideo.src = heroVideo.src.replace('muted=1', 'muted=0');
                soundOn = true;
            }
        });
    </script>
</body>
</html>
