<body>
    {{ content | safe }}

    <div class="video-modal" id="video-modal">
        <div class="video-modal-content">
            <button class="video-modal-close" id="modal-close"></button>
            <iframe id="modal-video" src="" allow="autoplay; fullscreen" allowfullscreen></iframe>
        </div>
    </div>

    <script>
        // ============================================
        // MOBILE MENU
        // ============================================
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const mobileMenu = document.querySelector('.mobile-menu');
        const mobileMenuLinks = document.querySelectorAll('.mobile-menu a');

        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', () => {
                mobileMenuBtn.classList.toggle('active');
                mobileMenu.classList.toggle('active');
                document.body.style.overflow = mobileMenu.classList.contains('active') ? 'hidden' : '';
            });

            mobileMenuLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenuBtn.classList.remove('active');
                    mobileMenu.classList.remove('active');
                    document.body.style.overflow = '';
                });
            });
        }

        // ============================================
        // DRAG TO SCROLL (Pour la souris - optionnel mais cool)
        // ============================================
        const slider = document.querySelector('.projects-container');
        if(slider) {
            let isDown = false;
            let startX;
            let scrollLeft;

            slider.addEventListener('mousedown', (e) => {
                isDown = true;
                slider.classList.add('active');
                startX = e.pageX - slider.offsetLeft;
                scrollLeft = slider.scrollLeft;
            });
            slider.addEventListener('mouseleave', () => {
                isDown = false;
                slider.classList.remove('active');
            });
            slider.addEventListener('mouseup', () => {
                isDown = false;
                slider.classList.remove('active');
            });
            slider.addEventListener('mousemove', (e) => {
                if(!isDown) return;
                e.preventDefault();
                const x = e.pageX - slider.offsetLeft;
                const walk = (x - startX) * 2; 
                slider.scrollLeft = scrollLeft - walk;
            });
        }

        // ============================================
        // VIDEO MODAL
        // ============================================
        const videoModal = document.getElementById('video-modal');
        const modalVideo = document.getElementById('modal-video');
        const modalClose = document.getElementById('modal-close');

        document.querySelectorAll('.project-play').forEach(playBtn => {
            playBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                e.preventDefault();
                const card = playBtn.closest('.project-card');
                const videoUrl = card?.dataset.video;
                
                if (videoUrl) {
                    let embedUrl = videoUrl;
                    if (videoUrl.includes('youtube.com/watch')) {
                        const videoId = videoUrl.split('v=')[1]?.split('&')[0];
                        embedUrl = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
                    } else if (videoUrl.includes('youtu.be/')) {
                        const videoId = videoUrl.split('youtu.be/')[1];
                        embedUrl = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
                    } else if (videoUrl.includes('vimeo.com/')) {
                        const videoId = videoUrl.split('vimeo.com/')[1];
                        embedUrl = `https://player.vimeo.com/video/${videoId}?autoplay=1`;
                    }
                    
                    modalVideo.src = embedUrl;
                    videoModal.classList.add('active');
                    document.body.style.overflow = 'hidden';
                }
            });
        });

        if (modalClose) {
            modalClose.addEventListener('click', () => {
                videoModal.classList.remove('active');
                modalVideo.src = '';
                document.body.style.overflow = '';
            });
        }

        videoModal?.addEventListener('click', (e) => {
            if (e.target === videoModal) {
                videoModal.classList.remove('active');
                modalVideo.src = '';
                document.body.style.overflow = '';
            }
        });

        // ============================================
        // SCROLL EFFECTS (Hero & Nav & Reveal)
        // ============================================
        const heroShowreel = document.getElementById('hero-showreel');
        const heroText = document.getElementById('hero-text');
        const scrollIndicator = document.querySelector('.scroll-indicator');
        const scrollLine = document.querySelector('.scroll-line::after');
        const workSection = document.querySelector('.work-section');
        const scrollLineEl = document.querySelector('.scroll-line');

        function updateScroll() {
            const scrollY = window.scrollY;
            const maxScroll = 500;
            const progress = Math.min(scrollY / maxScroll, 1);

            // Showreel
            if (heroShowreel) {
                const scale = 1 + (progress * 0.08);
                heroShowreel.style.transform = `scale(${scale})`;
                if (scrollY > 300) {
                    const fadeProgress = Math.min((scrollY - 300) / 250, 1);
                    heroShowreel.style.opacity = 1 - fadeProgress;
                } else {
                    heroShowreel.style.opacity = 1;
                }
            }
            
            // Text fade
            if (heroText) {
                const textOpacity = 1 - (progress * 2);
                heroText.style.opacity = Math.max(0, textOpacity);
            }
            
            // Scroll line
            if (scrollLineEl) {
                const lineProgress = Math.min(scrollY / 200, 1);
                const lineAfter = scrollLineEl.querySelector('.line-indicator') || document.createElement('div');
                if (!lineAfter.classList.contains('line-indicator')) {
                    lineAfter.classList.add('line-indicator');
                    lineAfter.style.cssText = 'position:absolute;top:0;left:0;width:100%;height:20px;background:white;border-radius:1px;transition:transform 0.05s linear;';
                    scrollLineEl.appendChild(lineAfter);
                }
                lineAfter.style.transform = `translateY(${lineProgress * 50}px)`;
                lineAfter.style.opacity = 1 - lineProgress;
            }
            
            // Hide scroll indicator
            if (scrollIndicator && workSection) {
                const workRect = workSection.getBoundingClientRect();
                if (workRect.top < window.innerHeight * 0.7) {
                    scrollIndicator.classList.add('hidden');
                } else {
                    scrollIndicator.classList.remove('hidden');
                }
            }
        }

        window.addEventListener('scroll', updateScroll, { passive: true });
        updateScroll();

        // Nav blur
        const nav = document.querySelector('nav');
        window.addEventListener('scroll', () => {
            nav.classList.toggle('scrolled', window.scrollY > 100);
        }, { passive: true });

        // Reveal Animations (Important pour que tes cartes apparaissent !)
        const revealObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) entry.target.classList.add('visible');
            });
        }, { threshold: 0.15 });

        document.querySelectorAll('.section-header, .project-card, .about-image, .about-content, .contact-section').forEach(el => {
            revealObserver.observe(el);
        });

        document.querySelectorAll('.project-card').forEach((card, i) => {
            card.style.transitionDelay = `${i * 0.08}s`;
        });

        // ============================================
        // MARQUEE DRAG
        // ============================================
        const marqueeTrack = document.querySelector('.marquee-track');
        if (marqueeTrack) {
            let isDragging = false;
            let startX = 0;
            let currentX = 0;

            marqueeTrack.classList.add('animating');

            function getTransformX() {
                const style = window.getComputedStyle(marqueeTrack);
                const matrix = new DOMMatrix(style.transform);
                return matrix.m41 || 0;
            }
            
            marqueeTrack.addEventListener('mousedown', (e) => {
                isDragging = true;
                marqueeTrack.classList.remove('animating');
                startX = e.clientX;
                currentX = getTransformX();
                marqueeTrack.style.transform = `translateX(${currentX}px)`;
            });

            document.addEventListener('mousemove', (e) => {
                if (!isDragging) return;
                e.preventDefault();
                const diff = e.clientX - startX;
                marqueeTrack.style.transform = `translateX(${currentX + diff}px)`;
            });

            document.addEventListener('mouseup', () => {
                if (!isDragging) return;
                isDragging = false;
                setTimeout(() => {
                    marqueeTrack.style.transform = '';
                    marqueeTrack.classList.add('animating');
                }, 100);
            });
        }

        // ============================================
        // SHOWREEL SOUND
        // ============================================
        const heroVideo = document.getElementById('hero-video');
        let soundEnabled = false;

        if (heroShowreel && heroVideo) {
            heroShowreel.addEventListener('click', () => {
                if (!soundEnabled) {
                    heroVideo.src = heroVideo.src.replace('muted=1', 'muted=0');
                    soundEnabled = true;
                }
            });
        }

        // ============================================
        // SMOOTH SCROLL ANCHOR
        // ============================================
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href'))?.scrollIntoView({ behavior: 'smooth', block: 'start' });
            });
        });
    </script>
