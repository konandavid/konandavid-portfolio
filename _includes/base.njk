<body>
    {{ content | safe }}

    <!-- Video Modal -->
    <div class="video-modal" id="video-modal">
        <div class="video-modal-content">
            <button class="video-modal-close" id="modal-close"></button>
            <iframe id="modal-video" src="" allow="autoplay; fullscreen" allowfullscreen></iframe>
        </div>
    </div>

    <script>
        // ============================================
        // MOBILE MENU
        // ============================================
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const mobileMenu = document.querySelector('.mobile-menu');
        const mobileMenuLinks = document.querySelectorAll('.mobile-menu a');

        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', () => {
                mobileMenuBtn.classList.toggle('active');
                mobileMenu.classList.toggle('active');
                document.body.style.overflow = mobileMenu.classList.contains('active') ? 'hidden' : '';
            });

            mobileMenuLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenuBtn.classList.remove('active');
                    mobileMenu.classList.remove('active');
                    document.body.style.overflow = '';
                });
            });
        }

        // ============================================
        // VIDEO MODAL - Only triggered by play button
        // ============================================
        const videoModal = document.getElementById('video-modal');
        const modalVideo = document.getElementById('modal-video');
        const modalClose = document.getElementById('modal-close');

        document.querySelectorAll('.project-play').forEach(playBtn => {
            playBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                const card = playBtn.closest('.project-card');
                const videoUrl = card?.dataset.video;
                
                if (videoUrl) {
                    let embedUrl = videoUrl;
                    if (videoUrl.includes('youtube.com/watch')) {
                        const videoId = videoUrl.split('v=')[1]?.split('&')[0];
                        embedUrl = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
                    } else if (videoUrl.includes('youtu.be/')) {
                        const videoId = videoUrl.split('youtu.be/')[1];
                        embedUrl = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
                    } else if (videoUrl.includes('vimeo.com/')) {
                        const videoId = videoUrl.split('vimeo.com/')[1];
                        embedUrl = `https://player.vimeo.com/video/${videoId}?autoplay=1`;
                    }
                    
                    modalVideo.src = embedUrl;
                    videoModal.classList.add('active');
                    document.body.style.overflow = 'hidden';
                }
            });
        });

        if (modalClose) {
            modalClose.addEventListener('click', () => {
                videoModal.classList.remove('active');
                modalVideo.src = '';
                document.body.style.overflow = '';
            });
        }

        videoModal?.addEventListener('click', (e) => {
            if (e.target === videoModal) {
                videoModal.classList.remove('active');
                modalVideo.src = '';
                document.body.style.overflow = '';
            }
        });

        // ============================================
        // SHOWREEL SCROLL EFFECT
        // ============================================
        const heroShowreel = document.getElementById('hero-showreel');
        const heroText = document.getElementById('hero-text');
        const scrollIndicator = document.querySelector('.scroll-indicator');
        const workSection = document.querySelector('.work-section');

        if (heroShowreel && heroText) {
            function updateShowreel() {
                const scrollY = window.scrollY;
                const maxScroll = 500;
                const progress = Math.min(scrollY / maxScroll, 1);
                
                const scale = 1 + (progress * 0.08);
                heroShowreel.style.transform = `scale(${scale})`;
                
                const textOpacity = 1 - (progress * 2);
                heroText.style.opacity = Math.max(0, textOpacity);
                
                // Scroll indicator disappears when projects are half visible
                if (scrollIndicator && workSection) {
                    const workRect = workSection.getBoundingClientRect();
                    const windowHeight = window.innerHeight;
                    // Hide when work section is 50% visible
                    if (workRect.top < windowHeight * 0.5) {
                        scrollIndicator.classList.add('hidden');
                    } else {
                        scrollIndicator.classList.remove('hidden');
                    }
                }
                
                if (scrollY > 300) {
                    const fadeProgress = Math.min((scrollY - 300) / 250, 1);
                    heroShowreel.style.opacity = 1 - fadeProgress;
                } else {
                    heroShowreel.style.opacity = 1;
                }
            }

            window.addEventListener('scroll', updateShowreel, { passive: true });
            updateShowreel();
        }

        // ============================================
        // NAVIGATION
        // ============================================
        const nav = document.querySelector('nav');

        window.addEventListener('scroll', () => {
            if (window.scrollY > 100) {
                nav.classList.add('scrolled');
            } else {
                nav.classList.remove('scrolled');
            }
        }, { passive: true });

        // ============================================
        // SCROLL REVEAL
        // ============================================
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.15
        };

        const revealObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.section-header, .project-card, .about-image, .about-content, .contact-section').forEach(el => {
            revealObserver.observe(el);
        });

        const projectCards = document.querySelectorAll('.project-card');
        projectCards.forEach((card, index) => {
            card.style.transitionDelay = `${index * 0.08}s`;
        });

        // ============================================
        // HORIZONTAL SCROLL DRAG FOR PROJECTS
        // ============================================
        const projectsContainer = document.querySelector('.projects-container');
        if (projectsContainer) {
            let isDown = false;
            let startX;
            let scrollLeft;
            let hasMoved = false;

            projectsContainer.addEventListener('mousedown', (e) => {
                // Don't start drag if clicking on play button
                if (e.target.closest('.project-play')) return;
                
                isDown = true;
                hasMoved = false;
                projectsContainer.style.cursor = 'grabbing';
                startX = e.pageX - projectsContainer.offsetLeft;
                scrollLeft = projectsContainer.scrollLeft;
            });

            projectsContainer.addEventListener('mouseleave', () => {
                isDown = false;
                projectsContainer.style.cursor = 'grab';
            });

            projectsContainer.addEventListener('mouseup', () => {
                isDown = false;
                projectsContainer.style.cursor = 'grab';
            });

            projectsContainer.addEventListener('mousemove', (e) => {
                if (!isDown) return;
                e.preventDefault();
                const x = e.pageX - projectsContainer.offsetLeft;
                const walk = (x - startX) * 2;
                if (Math.abs(walk) > 5) hasMoved = true;
                projectsContainer.scrollLeft = scrollLeft - walk;
            });

            // Touch support
            let touchStartX = 0;
            let touchScrollLeft = 0;

            projectsContainer.addEventListener('touchstart', (e) => {
                touchStartX = e.touches[0].pageX;
                touchScrollLeft = projectsContainer.scrollLeft;
            }, { passive: true });

            projectsContainer.addEventListener('touchmove', (e) => {
                const x = e.touches[0].pageX;
                const walk = (touchStartX - x) * 1.5;
                projectsContainer.scrollLeft = touchScrollLeft + walk;
            }, { passive: true });
        }

        // ============================================
        // MARQUEE DRAG CONTROL
        // ============================================
        const marqueeContainer = document.querySelector('.marquee-container');
        const marquee = document.querySelector('.marquee');
        
        if (marqueeContainer && marquee) {
            let isDragging = false;
            let startXMarquee;
            let scrollLeftMarquee = 0;
            let currentTranslate = 0;

            // Get current translateX from animation
            function getCurrentTranslate() {
                const style = window.getComputedStyle(marquee);
                const matrix = new DOMMatrix(style.transform);
                return matrix.m41;
            }

            marqueeContainer.addEventListener('mousedown', (e) => {
                isDragging = true;
                marquee.classList.add('paused');
                startXMarquee = e.pageX;
                currentTranslate = getCurrentTranslate();
                marqueeContainer.style.cursor = 'grabbing';
            });

            window.addEventListener('mousemove', (e) => {
                if (!isDragging) return;
                const diff = e.pageX - startXMarquee;
                marquee.style.transform = `translateX(${currentTranslate + diff}px)`;
            });

            window.addEventListener('mouseup', () => {
                if (isDragging) {
                    isDragging = false;
                    marqueeContainer.style.cursor = 'grab';
                    // Resume animation after a short delay
                    setTimeout(() => {
                        marquee.classList.remove('paused');
                        marquee.style.transform = '';
                    }, 100);
                }
            });

            // Touch support for marquee
            marqueeContainer.addEventListener('touchstart', (e) => {
                marquee.classList.add('paused');
                startXMarquee = e.touches[0].pageX;
                currentTranslate = getCurrentTranslate();
            }, { passive: true });

            marqueeContainer.addEventListener('touchmove', (e) => {
                const diff = e.touches[0].pageX - startXMarquee;
                marquee.style.transform = `translateX(${currentTranslate + diff}px)`;
            }, { passive: true });

            marqueeContainer.addEventListener('touchend', () => {
                setTimeout(() => {
                    marquee.classList.remove('paused');
                    marquee.style.transform = '';
                }, 100);
            }, { passive: true });
        }

        // ============================================
        // CLICK FOR SOUND ON SHOWREEL
        // ============================================
        const heroVideo = document.getElementById('hero-video');
        let soundEnabled = false;

        if (heroShowreel && heroVideo) {
            heroShowreel.addEventListener('click', () => {
                if (!soundEnabled) {
                    const currentSrc = heroVideo.src;
                    heroVideo.src = currentSrc.replace('muted=1', 'muted=0');
                    soundEnabled = true;
                }
            });
        }

        // ============================================
        // SMOOTH SCROLL
        // ============================================
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
