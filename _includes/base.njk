            .scroll-arrow { width: 40px; height: 40px; }
            footer { flex-direction: column; gap: 12px; text-align: center; }
        }
    </style>
</head>
<body>
    {{ content | safe }}

    <!-- Video Modal -->
    <div class="video-modal" id="video-modal">
        <div class="video-modal-content">
            <button class="video-modal-close" id="modal-close"></button>
            <iframe id="modal-video" src="" allow="autoplay; fullscreen" allowfullscreen></iframe>
        </div>
    </div>

    <script>
        // Mobile Menu
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const mobileMenu = document.querySelector('.mobile-menu');
        
        mobileMenuBtn?.addEventListener('click', () => {
            mobileMenuBtn.classList.toggle('active');
            mobileMenu.classList.toggle('active');
            document.body.style.overflow = mobileMenu.classList.contains('active') ? 'hidden' : '';
        });

        document.querySelectorAll('.mobile-menu a').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenuBtn.classList.remove('active');
                mobileMenu.classList.remove('active');
                document.body.style.overflow = '';
            });
        });

        // Video Modal
        const videoModal = document.getElementById('video-modal');
        const modalVideo = document.getElementById('modal-video');
        
        document.querySelectorAll('.project-play').forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.stopPropagation();
                const url = btn.closest('.project-card')?.dataset.video;
                if (url) {
                    let embed = url;
                    if (url.includes('youtube.com/watch')) embed = `https://www.youtube.com/embed/${url.split('v=')[1]?.split('&')[0]}?autoplay=1`;
                    else if (url.includes('youtu.be/')) embed = `https://www.youtube.com/embed/${url.split('youtu.be/')[1]}?autoplay=1`;
                    else if (url.includes('vimeo.com/')) embed = `https://player.vimeo.com/video/${url.split('vimeo.com/')[1]}?autoplay=1`;
                    modalVideo.src = embed;
                    videoModal.classList.add('active');
                    document.body.style.overflow = 'hidden';
                }
            });
        });

        document.getElementById('modal-close')?.addEventListener('click', () => {
            videoModal.classList.remove('active');
            modalVideo.src = '';
            document.body.style.overflow = '';
        });

        videoModal?.addEventListener('click', (e) => {
            if (e.target === videoModal) {
                videoModal.classList.remove('active');
                modalVideo.src = '';
                document.body.style.overflow = '';
            }
        });

        // Scroll effects
        const heroShowreel = document.getElementById('hero-showreel');
        const heroText = document.getElementById('hero-text');
        const scrollIndicator = document.querySelector('.scroll-indicator');
        const workSection = document.querySelector('.work-section');

        window.addEventListener('scroll', () => {
            const y = window.scrollY;
            const progress = Math.min(y / 500, 1);
            
            if (heroShowreel) {
                heroShowreel.style.transform = `scale(${1 + progress * 0.08})`;
                heroShowreel.style.opacity = y > 300 ? Math.max(0, 1 - (y - 300) / 250) : 1;
            }
            
            if (heroText) heroText.style.opacity = Math.max(0, 1 - progress * 2);
            
            if (scrollIndicator && workSection) {
                scrollIndicator.classList.toggle('hidden', workSection.getBoundingClientRect().top < window.innerHeight * 0.7);
            }
            
            document.querySelector('nav').classList.toggle('scrolled', y > 100);
        }, { passive: true });

        // Scroll reveal
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(e => e.isIntersecting && e.target.classList.add('visible'));
        }, { threshold: 0.15 });

        document.querySelectorAll('.section-header, .project-card, .about-image, .about-content, .contact-section').forEach(el => observer.observe(el));
        document.querySelectorAll('.project-card').forEach((c, i) => c.style.transitionDelay = `${i * 0.08}s`);

        // Project scroll arrows
        const container = document.querySelector('.projects-container');
        const leftArrow = document.getElementById('scroll-left');
        const rightArrow = document.getElementById('scroll-right');
        const scrollAmount = 450;

        leftArrow?.addEventListener('click', () => container.scrollBy({ left: -scrollAmount, behavior: 'smooth' }));
        rightArrow?.addEventListener('click', () => container.scrollBy({ left: scrollAmount, behavior: 'smooth' }));

        function updateArrows() {
            if (leftArrow) leftArrow.disabled = container.scrollLeft <= 0;
            if (rightArrow) rightArrow.disabled = container.scrollLeft >= container.scrollWidth - container.clientWidth - 10;
        }
        
        container?.addEventListener('scroll', updateArrows);
        updateArrows();

        // Marquee - continuous drag without reset
        const marquee = document.querySelector('.marquee-track');
        if (marquee) {
            let isDragging = false;
            let startX = 0;
            let scrollPos = 0;

            // Get current position from transform or animation
            function getCurrentPos() {
                const style = getComputedStyle(marquee);
                const matrix = new DOMMatrix(style.transform);
                return matrix.m41 || 0;
            }

            // Set position and handle wrapping
            function setPos(x) {
                const totalWidth = marquee.scrollWidth / 2;
                // Wrap around
                if (x > 0) x = x - totalWidth;
                if (x < -totalWidth) x = x + totalWidth;
                marquee.style.transform = `translateX(${x}px)`;
            }

            marquee.addEventListener('mousedown', (e) => {
                isDragging = true;
                startX = e.clientX;
                scrollPos = getCurrentPos();
                marquee.classList.add('dragging');
            });

            document.addEventListener('mousemove', (e) => {
                if (!isDragging) return;
                const diff = e.clientX - startX;
                setPos(scrollPos + diff);
            });

            document.addEventListener('mouseup', () => {
                if (!isDragging) return;
                isDragging = false;
                // Continue from current position
                const currentPos = getCurrentPos();
                const totalWidth = marquee.scrollWidth / 2;
                // Calculate what percentage through the animation we are
                const progress = Math.abs(currentPos) / totalWidth;
                // Resume animation from this point
                marquee.style.animation = 'none';
                marquee.offsetHeight; // Trigger reflow
                marquee.style.transform = `translateX(${currentPos}px)`;
                marquee.classList.remove('dragging');
                
                // Smoothly resume
                setTimeout(() => {
                    marquee.style.transition = 'none';
                    marquee.style.animation = `marqueeAnim ${40 * (1 - progress)}s linear infinite`;
                    marquee.style.animationDelay = '0s';
                }, 50);
            });

            // Touch events
            marquee.addEventListener('touchstart', (e) => {
                isDragging = true;
                startX = e.touches[0].clientX;
                scrollPos = getCurrentPos();
                marquee.classList.add('dragging');
            }, { passive: true });

            document.addEventListener('touchmove', (e) => {
                if (!isDragging) return;
                const diff = e.touches[0].clientX - startX;
                setPos(scrollPos + diff);
            }, { passive: true });

            document.addEventListener('touchend', () => {
                if (!isDragging) return;
                isDragging = false;
                const currentPos = getCurrentPos();
                marquee.classList.remove('dragging');
                setTimeout(() => {
                    marquee.style.animation = '';
                }, 50);
            });
        }

        // Smooth scroll for anchors
        document.querySelectorAll('a[href^="#"]').forEach(a => {
            a.addEventListener('click', (e) => {
                e.preventDefault();
                document.querySelector(a.getAttribute('href'))?.scrollIntoView({ behavior: 'smooth' });
            });
        });

        // Showreel sound
        const heroVideo = document.getElementById('hero-video');
        let soundOn = false;
        heroShowreel?.addEventListener('click', () => {
            if (!soundOn && heroVideo) {
                heroVideo.src = heroVideo.src.replace('muted=1', 'muted=0');
                soundOn = true;
            }
        });
    </script>
</body>
