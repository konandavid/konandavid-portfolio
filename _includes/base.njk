        .contact-email {
            display: inline-block;
            font-size: 15px;
            font-weight: 500;
            color: var(--text-primary);
            text-decoration: none;
            padding: 16px 40px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 100px;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
