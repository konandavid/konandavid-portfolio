<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ site.title }} — {{ site.description }}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-primary: #000000;
            --bg-secondary: #0a0a0a;
            --bg-tertiary: #111111;
            --text-primary: #f5f5f7;
            --text-secondary: #a1a1a6;
            --text-muted: #6e6e73;
            --accent: #FF6B35;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-primary);
            color: var(--text-primary);
            overflow-x: hidden; /* Empêche le site de bouger gauche/droite */
        }

        /* --- NAVIGATION --- */
        nav {
            position: fixed; top: 0; left: 0; right: 0; z-index: 1000;
            padding: 20px 48px;
            display: flex; justify-content: space-between; align-items: center;
            transition: background 0.3s ease;
        }
        nav.scrolled { background: rgba(0,0,0,0.9); backdrop-filter: blur(10px); }

        .logo { font-size: 13px; font-weight: 700; letter-spacing: 2px; text-transform: uppercase; color: white; text-decoration: none; }
        .nav-links { list-style: none; display: flex; gap: 30px; }
        .nav-links a { color: #aaa; text-decoration: none; font-size: 13px; transition: color 0.3s; }
        .nav-links a:hover { color: white; }
        
        /* Contact Button */
        .nav-contact {
            padding: 8px 20px; border: 1px solid rgba(255,255,255,0.2); border-radius: 50px;
            color: white; text-decoration: none; font-size: 12px; display: flex; align-items: center; gap: 8px;
            transition: 0.3s;
        }
        .nav-contact:hover { border-color: var(--accent); background: var(--accent); }
        .nav-contact svg { width: 14px; height: 14px; }

        /* Mobile Menu */
        .mobile-menu-btn { display: none; background: none; border: none; flex-direction: column; gap: 5px; cursor: pointer; z-index: 1001; }
        .mobile-menu-btn span { width: 25px; height: 2px; background: white; }
        .mobile-menu { display: none; position: fixed; inset: 0; background: black; z-index: 999; flex-direction: column; justify-content: center; align-items: center; gap: 30px; }
        .mobile-menu.active { display: flex; }
        .mobile-menu a { color: white; text-decoration: none; font-size: 24px; }

        /* --- HERO --- */
        .hero { min-height: 100vh; display: flex; flex-direction: column; justify-content: center; align-items: center; padding: 100px 20px; text-align: center; }
        .hero-showreel { 
            width: 100%; max-width: 900px; aspect-ratio: 16/9; background: #111; 
            border-radius: 12px; overflow: hidden; margin-bottom: 40px; 
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        }
        .hero-showreel iframe { width: 100%; height: 100%; border: none; }
        .hero-text h1 { font-size: 12px; letter-spacing: 3px; text-transform: uppercase; color: #888; }
        .scroll-indicator { margin-top: 50px; opacity: 0.5; }

        /* --- WORK SECTION (SCROLL HORIZONTAL) --- */
        .work-section { padding: 60px 48px; position: relative; }
        .section-header { display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 30px; }
        .section-header h2 { font-size: 32px; color: white; }

        /* C'est ICI le coeur du système */
        .projects-container {
            display: flex;
            gap: 24px;
            
            /* Permet le scroll horizontal natif (Trackpad) */
            overflow-x: auto; 
            
            /* Cache la barre de scroll */
            scrollbar-width: none;
            -ms-overflow-style: none;
            
            /* Espace pour que ça respire */
            padding: 20px 0; 
            
            /* Curseur pour indiquer qu'on peut grab */
            cursor: grab;
            
            /* Fluidité sur mobile */
            -webkit-overflow-scrolling: touch; 
        }
        
        .projects-container::-webkit-scrollbar { display: none; }
        .projects-container.active { cursor: grabbing; }

        /* Les cartes */
        .project-card {
            flex: 0 0 380px; /* Largeur fixe des cartes */
            aspect-ratio: 4/5;
            background: #111;
            border-radius: 12px;
            overflow: hidden;
            position: relative;
            
            /* Animations d'origine remises ! */
            opacity: 0; 
            transform: translateY(40px);
            transition: all 0.6s ease;
        }

        .project-card.visible { opacity: 1; transform: translateY(0); }

        .project-card img { width: 100%; height: 100%; object-fit: cover; transition: 0.6s; pointer-events: none; }
        .project-card:hover img { transform: scale(1.05); }

        .project-info {
            position: absolute; inset: 0; padding: 24px;
            display: flex; flex-direction: column; justify-content: flex-end;
            background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
            opacity: 0; transition: 0.4s;
        }
        .project-card:hover .project-info { opacity: 1; }
        
        .project-title { font-size: 20px; font-weight: 600; color: white; }
        .project-artist { font-size: 12px; text-transform: uppercase; color: var(--accent); margin-bottom: 5px; }

        /* --- FOOTER & MODALS --- */
        .about-section { padding: 80px 48px; max-width: 1000px; margin: 0 auto; color: #aaa; }
        .contact-section { padding: 100px 48px; text-align: center; }
        .contact-email { font-size: 20px; color: white; text-decoration: none; border-bottom: 1px solid var(--accent); }
        footer { padding: 40px; text-align: center; color: #555; font-size: 12px; margin-top: 50px; border-top: 1px solid #111; }

        /* Video Modal */
        .video-modal { display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.95); z-index: 2000; justify-content: center; align-items: center; }
        .video-modal.active { display: flex; }
        .video-modal-content { width: 90%; max-width: 1000px; aspect-ratio: 16/9; position: relative; }
        .video-modal iframe { width: 100%; height: 100%; border: none; }
        .video-modal-close { position: absolute; top: -40px; right: 0; color: white; background: none; border: none; font-size: 30px; cursor: pointer; }

        @media (max-width: 768px) {
            .nav-links, .nav-contact { display: none; }
            .mobile-menu-btn { display: flex; }
            .project-card { flex: 0 0 300px; }
            .work-section { padding: 40px 20px; }
            nav { padding: 20px; }
        }
    </style>
</head>
<body>
    {{ content | safe }}

    <div class="video-modal" id="video-modal">
        <div class="video-modal-content">
            <button class="video-modal-close">&times;</button>
            <iframe id="modal-video" src="" allow="autoplay; fullscreen"></iframe>
        </div>
    </div>

    <script>
        // 1. ANIMATIONS D'APPARITION (Intersection Observer)
        // C'est ce qui fait apparaitre tes cartes doucement quand on descend
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.project-card').forEach((card, index) => {
            // Petit délai décalé pour un effet pro
            card.style.transitionDelay = `${index * 0.1}s`; 
            observer.observe(card);
        });

        // 2. DRAG TO SCROLL (Pour la souris)
        // Permet de cliquer et glisser comme sur un téléphone, même sur ordi
        const slider = document.querySelector('.projects-container');
        if(slider) {
            let isDown = false;
            let startX;
            let scrollLeft;

            slider.addEventListener('mousedown', (e) => {
                isDown = true;
                slider.classList.add('active');
                startX = e.pageX - slider.offsetLeft;
                scrollLeft = slider.scrollLeft;
            });

            slider.addEventListener('mouseleave', () => {
                isDown = false;
                slider.classList.remove('active');
            });

            slider.addEventListener('mouseup', () => {
                isDown = false;
                slider.classList.remove('active');
            });

            slider.addEventListener('mousemove', (e) => {
                if(!isDown) return;
                e.preventDefault();
                const x = e.pageX - slider.offsetLeft;
                // Vitesse du scroll (x2 pour être confortable)
                const walk = (x - startX) * 2; 
                slider.scrollLeft = scrollLeft - walk;
            });
        }

        // 3. MENU MOBILE & VIDEO MODAL (Classique)
        const menuBtn = document.querySelector('.mobile-menu-btn');
        const menu = document.querySelector('.mobile-menu');
        const menuLinks = document.querySelectorAll('.mobile-menu a');
        
        if(menuBtn) {
            menuBtn.addEventListener('click', () => {
                menu.classList.toggle('active');
                document.body.style.overflow = menu.classList.contains('active') ? 'hidden' : '';
            });
            menuLinks.forEach(l => l.addEventListener('click', () => {
                menu.classList.remove('active');
                document.body.style.overflow = '';
            }));
        }

        // Modal Logic
        const modal = document.getElementById('video-modal');
        const iframe = document.getElementById('modal-video');
        
        document.querySelectorAll('.project-card').forEach(card => {
            card.addEventListener('click', () => {
                const vid = card.dataset.video;
                if(vid) {
                    let src = vid;
                    if(vid.includes('youtu')) {
                        const id = vid.split('v=')[1] || vid.split('/').pop();
                        src = `https://www.youtube.com/embed/${id.split('&')[0]}?autoplay=1`;
                    }
                    iframe.src = src;
                    modal.classList.add('active');
                }
            });
        });

        document.querySelector('.video-modal-close').addEventListener('click', () => {
            modal.classList.remove('active');
            iframe.src = '';
        });

        // Nav Background
        window.addEventListener('scroll', () => {
            document.querySelector('nav').classList.toggle('scrolled', window.scrollY > 50);
        });
    </script>
</body>
</html>
