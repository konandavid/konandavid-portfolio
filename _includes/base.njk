<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ site.title }} — {{ site.description }}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-primary: #000000;
            --bg-secondary: #0a0a0a;
            --bg-tertiary: #111111;
            --text-primary: #f5f5f7;
            --text-secondary: #a1a1a6;
            --accent: #FF6B35;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-primary);
            color: var(--text-primary);
            line-height: 1.5;
            overflow-x: hidden; /* Empêche le scroll horizontal de toute la page */
        }

        /* Navigation */
        nav {
            position: fixed;
            top: 0; left: 0; right: 0;
            z-index: 1000;
            padding: 20px 48px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(0,0,0,0.8);
            backdrop-filter: blur(10px);
        }

        .logo {
            color: white;
            text-decoration: none;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-size: 14px;
            font-weight: 700;
        }

        .nav-links { list-style: none; display: flex; gap: 30px; }
        .nav-links a { color: var(--text-secondary); text-decoration: none; font-size: 14px; }
        .nav-links a:hover { color: white; }

        .nav-contact {
            padding: 8px 20px;
            border: 1px solid rgba(255,255,255,0.2);
            border-radius: 50px;
            color: white;
            text-decoration: none;
            font-size: 13px;
            display: flex; align-items: center; gap: 8px;
        }
        .nav-contact svg { width: 14px; height: 14px; }

        /* Menu Mobile Button */
        .mobile-menu-btn {
            display: none;
            background: none; border: none; cursor: pointer;
            flex-direction: column; gap: 5px;
        }
        .mobile-menu-btn span {
            width: 25px; height: 2px; background: white; display: block;
        }

        /* Menu Mobile Overlay */
        .mobile-menu {
            display: none;
            position: fixed; top: 0; left: 0; right: 0; bottom: 0;
            background: black; z-index: 999;
            flex-direction: column; justify-content: center; align-items: center; gap: 30px;
        }
        .mobile-menu.active { display: flex; }
        .mobile-menu a { color: white; text-decoration: none; font-size: 24px; }

        /* Hero Section */
        .hero {
            min-height: 90vh;
            display: flex; flex-direction: column; justify-content: center; align-items: center;
            padding: 100px 20px;
            text-align: center;
        }

        .hero-showreel {
            width: 100%; max-width: 900px;
            aspect-ratio: 16/9;
            background: #111;
            border-radius: 12px;
            overflow: hidden;
            margin-bottom: 40px;
        }
        .hero-showreel iframe { width: 100%; height: 100%; border: none; }

        .hero-text h1 {
            font-size: 14px; letter-spacing: 3px; text-transform: uppercase;
            color: var(--text-secondary); margin-bottom: 20px;
        }

        /* WORK SECTION & SCROLL HORIZONTAL (LE COEUR DU PROBLEME) */
        .work-section { padding: 60px 48px; }
        
        .section-header { 
            margin-bottom: 30px; display: flex; justify-content: space-between; align-items: flex-end; 
        }
        .section-header h2 { font-size: 32px; color: white; }

        /* --- C'EST ICI QUE LA MAGIE OPERE --- */
        .projects-container {
            display: flex;
            gap: 20px;
            /* Active le scroll horizontal natif (trackpad fluide) */
            overflow-x: auto; 
            /* Cache la barre de scroll moche */
            scrollbar-width: none;  /* Firefox */
            -ms-overflow-style: none;  /* IE */
            padding-bottom: 20px; /* Espace pour le scroll */
            /* Très important : empêche le contenu de passer à la ligne */
            flex-wrap: nowrap; 
            scroll-snap-type: x mandatory; /* Optionnel : pour que ça s'arrête net sur une image */
        }
        
        .projects-container::-webkit-scrollbar { 
            display: none; /* Chrome/Safari */
        }

        .project-card {
            /* Fixe la largeur des cartes */
            flex: 0 0 350px; 
            aspect-ratio: 4/5;
            background: var(--bg-tertiary);
            border-radius: 12px;
            overflow: hidden;
            position: relative;
            scroll-snap-align: start;
            /* Toujours visible par défaut ! */
            opacity: 1; 
            transform: none;
        }

        .project-card img {
            width: 100%; height: 100%; object-fit: cover;
            transition: transform 0.5s ease;
        }
        .project-card:hover img { transform: scale(1.05); }

        .project-info {
            position: absolute; bottom: 0; left: 0; right: 0;
            padding: 20px;
            background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
        }

        .project-title { font-size: 18px; font-weight: 600; color: white; }
        .project-artist { font-size: 12px; text-transform: uppercase; color: var(--accent); }

        /* Video Modal */
        .video-modal {
            display: none; position: fixed; inset: 0;
            background: rgba(0,0,0,0.95); z-index: 2000;
            justify-content: center; align-items: center;
        }
        .video-modal.active { display: flex; }
        .video-modal-content { width: 90%; max-width: 1000px; aspect-ratio: 16/9; position: relative; }
        .video-modal-close {
            position: absolute; top: -40px; right: 0;
            background: none; border: none; color: white; font-size: 30px; cursor: pointer;
        }
        .video-modal iframe { width: 100%; height: 100%; border-radius: 12px; }

        /* Footer */
        footer { padding: 40px; text-align: center; font-size: 12px; color: var(--text-muted); border-top: 1px solid #222; margin-top: 60px;}

        /* Responsive */
        @media (max-width: 768px) {
            nav { padding: 15px 20px; }
            .nav-links, .nav-contact { display: none; }
            .mobile-menu-btn { display: flex; }
            .work-section { padding: 40px 20px; }
            .projects-container { margin: 0 -20px; padding: 0 20px 20px 20px; }
            .project-card { flex: 0 0 280px; } /* Cartes plus petites sur mobile */
        }
    </style>
</head>
<body>
    
    {{ content | safe }}

    <div class="video-modal" id="video-modal">
        <div class="video-modal-content">
            <button class="video-modal-close">&times;</button>
            <iframe id="modal-video" src="" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
        </div>
    </div>

    <script>
        // 1. GESTION DU MENU MOBILE (Indispensable)
        const menuBtn = document.querySelector('.mobile-menu-btn');
        const menuOverlay = document.querySelector('.mobile-menu');
        const menuLinks = document.querySelectorAll('.mobile-menu a');

        if(menuBtn) {
            menuBtn.addEventListener('click', () => {
                menuOverlay.classList.toggle('active');
                document.body.style.overflow = menuOverlay.classList.contains('active') ? 'hidden' : '';
            });

            // Fermer le menu quand on clique sur un lien
            menuLinks.forEach(link => {
                link.addEventListener('click', () => {
                    menuOverlay.classList.remove('active');
                    document.body.style.overflow = '';
                });
            });
        }

        // 2. GESTION DE LA MODALE VIDEO (Simple et robuste)
        const modal = document.getElementById('video-modal');
        const modalVideo = document.getElementById('modal-video');
        const closeBtn = document.querySelector('.video-modal-close');
        
        // On cherche tous les boutons "play" ou les cartes qui ont une vidéo
        // Note: Assure-toi que dans index.njk tes cartes ont bien data-video="..."
        document.querySelectorAll('.project-card').forEach(card => {
            card.addEventListener('click', () => {
                const videoUrl = card.dataset.video;
                if(videoUrl) {
                    // Conversion simple Youtube/Vimeo
                    let embedUrl = videoUrl;
                    if(videoUrl.includes('youtube.com') || videoUrl.includes('youtu.be')) {
                        const vId = videoUrl.split('v=')[1] || videoUrl.split('/').pop();
                        embedUrl = `https://www.youtube.com/embed/${vId.split('&')[0]}?autoplay=1`;
                    } else if(videoUrl.includes('vimeo')) {
                        const vId = videoUrl.split('/').pop();
                        embedUrl = `https://player.vimeo.com/video/${vId}?autoplay=1`;
                    }
                    
                    modalVideo.src = embedUrl;
                    modal.classList.add('active');
                }
            });
        });

        // Fermeture modale
        if(closeBtn) {
            closeBtn.addEventListener('click', () => {
                modal.classList.remove('active');
                modalVideo.src = ''; // Coupe le son
            });
        }
        // Fermer en cliquant à côté
        modal.addEventListener('click', (e) => {
            if(e.target === modal) {
                modal.classList.remove('active');
                modalVideo.src = '';
            }
        });
    </script>
</body>
</html>
